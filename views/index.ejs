<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join Us</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .interactive-gradient {
            background-size: 400% 400%;
            transition: background-position 0.3s ease;
        }
    </style>
</head>
<body class="bg-zinc-900 text-white">
    <div id="gradientContainer" class="w-full min-h-screen md:w-[40vw] md:mx-auto bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 py-12 px-6 flex flex-col items-center justify-center interactive-gradient">
        <div class="w-full max-w-md flex flex-col items-center gap-8">
            <img class="w-44 mb-2 drop-shadow-lg" src="/images/logo.png" alt="Logo">
            <h1 class="text-4xl font-bold mb-2 text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-500">Join Us</h1>
            <form class="w-full space-y-6" action="/register" method="post">
                <div class="relative group">
                    <input id="username" class="peer px-4 py-3 border-b-2 border-zinc-600 block w-full bg-transparent focus:outline-none focus:border-blue-500 transition-all placeholder-transparent" type="text" placeholder="Username" name="username" required>
                    <label for="username" class="absolute left-4 -top-2.5 text-sm text-zinc-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-400">Username</label>
                    <span class="absolute bottom-0 left-0 h-0.5 w-0 bg-blue-500 transition-all duration-300 group-hover:w-full"></span>
                </div>
                <div class="relative group">
                    <input id="email" class="peer px-4 py-3 border-b-2 border-zinc-600 block w-full bg-transparent focus:outline-none focus:border-blue-500 transition-all placeholder-transparent" type="email" placeholder="Email" name="email" required>
                    <label for="email" class="absolute left-4 -top-2.5 text-sm text-zinc-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-400">Email</label>
                    <span class="absolute bottom-0 left-0 h-0.5 w-0 bg-blue-500 transition-all duration-300 group-hover:w-full"></span>
                </div>
                <div class="relative group">
                    <input id="name" class="peer px-4 py-3 border-b-2 border-zinc-600 block w-full bg-transparent focus:outline-none focus:border-blue-500 transition-all placeholder-transparent" type="text" placeholder="Full Name" name="name" required>
                    <label for="name" class="absolute left-4 -top-2.5 text-sm text-zinc-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-400">Full Name</label>
                    <span class="absolute bottom-0 left-0 h-0.5 w-0 bg-blue-500 transition-all duration-300 group-hover:w-full"></span>
                </div>
                <div class="relative group">
                    <input id="password" class="peer px-4 py-3 border-b-2 border-zinc-600 block w-full bg-transparent focus:outline-none focus:border-blue-500 transition-all placeholder-transparent pr-10" type="password" placeholder="Password" name="password" required>
                    <label for="password" class="absolute left-4 -top-2.5 text-sm text-zinc-400 transition-all peer-placeholder-shown:text-base peer-placeholder-shown:top-3 peer-focus:-top-2.5 peer-focus:text-sm peer-focus:text-blue-400">Password</label>
                    <span class="absolute bottom-0 left-0 h-0.5 w-0 bg-blue-500 transition-all duration-300 group-hover:w-full"></span>
                    <button type="button" id="togglePassword" class="absolute right-2 top-2 text-zinc-400 hover:text-blue-500 focus:outline-none">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                    </button>
                </div>
                <button class="group relative w-full overflow-hidden bg-white text-black px-6 py-3 rounded-md mt-8 font-semibold text-lg transition-all duration-300 ease-in-out focus:outline-none" type="submit">
                    <span class="relative z-10 group-hover:opacity-0 transition-opacity duration-300">Create Account</span>
                    <span class="absolute inset-0 bg-gradient-to-br from-zinc-900 via-zinc-800 to-zinc-900 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></span>
                    <span class="absolute inset-0 border-2 border-black group-hover:border-white transition-colors duration-300"></span>
                    <span class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </span>
                </button>
            </form>
            <p class="text-sm mt-6">Already have an account? <a href="/login" class="text-blue-400 hover:text-blue-300 transition-colors font-medium">Log In</a></p>
        </div>
    </div>
    <script>
        // Interactive gradient background
        const gradientContainer = document.getElementById('gradientContainer');
        
        gradientContainer.addEventListener('mousemove', (e) => {
            const rect = gradientContainer.getBoundingClientRect();
            const x = (e.clientX - rect.left) / rect.width * 100;
            const y = (e.clientY - rect.top) / rect.height * 100;
            
            gradientContainer.style.backgroundPosition = `${x}% ${y}%`;
        });

        // Add smooth scrolling and focus effect
        document.querySelectorAll('input').forEach(input => {
            input.addEventListener('focus', () => {
                input.parentElement.classList.add('scale-105');
                input.parentElement.style.transition = 'all 0.3s ease';
            });
            input.addEventListener('blur', () => {
                input.parentElement.classList.remove('scale-105');
            });
        });

        // Improved toggle password visibility
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#password');

        togglePassword.addEventListener('click', function (e) {
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            
            // Change the icon based on password visibility
            if (type === 'text') {
                this.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                    </svg>
                `;
            } else {
                this.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                `;
            }
            
            this.classList.toggle('text-blue-500');
        });
    </script>
</body>
</html>